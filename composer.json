{
  "name": "polyglot/translator",
  "type": "library",
  "description": "PHP Polyglot translator",
  "keywords": ["polyglot", "translator"],
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Dudarev",
      "email": "ivan@ddrv.ru",
      "homepage": "https://ddrv.ru"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*",
    "polyglot/contract-translator": "^1.0",
    "polyglot/contract-template-provider": "^1.0",
    "polyglot/contract-template-resolver": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5 || ^7.5 || 8.5 || 9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "polyglot/template-resolver-simple": "^1.0",
    "polyglot/template-provider-memory": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Polyglot\\Translator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TestUnits\\Polyglot\\Translator\\": "tests/unit/"
    }
  },
  "funding": [
    {
      "type": "other",
      "url": "https://donation.ddrv.ru"
    }
  ]
}
